<section class="movie">
    <div class="image">
      <%= image_tag @event.image_file_name %>
    </div>
    <div class="summary">
      <h1>
        <%= @event.name %>
      </h1>
      <h2>
        <%= pluralize(@event.capacity, "spot") %> &bull; <%= price(@event) %>
      </h2>
      <h3>
        <%= day_and_time(@event) %> in <%= @event.location %>
      </h3>
      <p>
        <%= truncate(@event.description, length: 150, separator: " ") %>
      </p>
      <div>
      <%= register_or_sold_out(@event) %>
        <p>
            <%= link_to "who's comming", event_registrations_path(@event) %>
        </p>
      </div>
    </div>
  </section>

  <section class="admin">
    <%= link_to "Edit", edit_event_path(@event), class: "button" %> 
    <%= link_to "Delete", @event, class: "button",
                                  data: { turbo_method: :delete, turbo_confirm: "Really?" } %>
  </section>