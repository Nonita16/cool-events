<% @events.each do |event| %>
  <section class="movie">
    <div class="image">
      <%= image_tag event.image_file_name %>
    </div>
    <div class="summary">
      <h2>
        <%= link_to event.name, event_path(event) %>
      </h2>
      <h3>
        <%= day_and_time(event) %> in <%= event.location %>
      </h3>
      <span class="stars">
        <%= price(event) %>
      </span>
      <p>
        <%= truncate(event.description, length: 150, separator: " ") %>
      </p>
    </div>
  </section>
<% end %>

<section class="admin">
  <%= link_to "Add new event", new_event_path, class: "button" %>
</section>